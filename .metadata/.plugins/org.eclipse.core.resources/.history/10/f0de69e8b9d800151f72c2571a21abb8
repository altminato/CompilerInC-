#ifndef MISC_H_
#define MISC_H_


#include <string>

//const int ffalse = 0;
//const int ttrue = 1;

//TCharCode
enum TCharCode{
	ccLetter, ccDigit, ccSpecial, ccQuote, ccWhiteSpace, ccEndOfFile, ccError,
};


//TTokenCode
enum TTokenCode{
	tcDummy, tcWord, tcNumber, tcPeriod, tcEndOfFile, tcError,
};

//TDataType
enum TDataType{
	tyDummy, tyInteger, tyReal, tyCharacter, tyString,
};

//TDataValue
union TDataValue{
	int integer;
	float real;
	char character;
	char *pString;
};

void stringtolower(char *string, int lenght){
	for(int i=0; i<lenght; i++){
		if(isupper(string[i])){
			string[i]=tolower(string[i]);
		}
	}
}


#endif /* MISC_H_ */
